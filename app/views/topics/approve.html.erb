<h1>Topics Awaiting Approval</h1>

<!--Approved is defaulted to nil right now...-->
<% topics = Topic.where(reviewed: false) %>

<center>
  <% topics.each do |top| %>
    <%= form_tag("/topics/approve_or_destroy/#{top.id}", method: "post") do %>
      <div>
        <div style="display:inline-block">
          <h2><%= top.name %></h2>
        </div>
      </div>
      
      <div>
        <p><%= top.description %></p>
      </div>
      
      <div>
        <h4>Resources</h4>
        <ul>
          <% resources = top.resource.all %>
          <% resources.each do |res| %>
            <li><a href="<%= resource_path(res) %>"><%= res.name %></a></li>
          <% end %>
        </ul>
      </div>
          
    
      <div style="display:inline-block">
          <button class="btn btn-success btn-sm" type="submit" name="todo" value="approve">Approve this Topic</button>
      </div>
      <div style="display:inline-block">
          <button class="btn btn-danger btn-sm" type="submit" name="todo" value="unapprove">Delete this Topic</button>
      </div>
      
      
      <% # TODO: Come back and make a dropdown box with the info %>
      <% # TODO: Come back and make a second list of topics that have been reviewed and not approved %>
    <% end %>
  <% end %>
</center>



